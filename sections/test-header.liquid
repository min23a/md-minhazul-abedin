{{ "test-header.css" | asset_url | stylesheet_tag }}
<script src="{{ 'test-header.js' | asset_url }}" defer="defer"></script>

{% style %}
  header {
    --button-color: {{ section.settings.btn_clr }};
    --button-hvr-clr: {{ section.settings.btn__hvr_clr }};
    position: relative;
    display: block;
  }
{% endstyle %}

<div id="header-{{section.id}}" class="test_header">
  <mobile-header class="mobile_header" data-open="false">
    <div class="mobile_bar">
      {{ 'icon-ham.svg' | inline_asset_content }}
      {{ 'icon-cross.svg' | inline_asset_content }}
    </div>
  </mobile-header>

  <div class="logo">
    <a class="logo_link test-link" href={{section.settings.logo_url}}>{{ section.settings.logo_text }}</a>
  </div>
  <div class="announcement">
    {{ section.settings.announcement }}
  </div>
  {% render 'test-cta'
    , inverse: false
    ,
 cta: section.settings.btn_url
    ,
 cta_text: section.settings.btn_text
    ,
 cls: "dsk_cta"
  %}
</div>
<div class="mobile_header_dropdown">
  <div class="mobile_announcement">
    {{ section.settings.announcement }}
  </div>
  <div class="mbl_cta_cont">

    {% render 'test-cta'
      ,
 inverse: false
      ,
 cta: section.settings.btn_url
      ,
 cta_text: section.settings.btn_text
      ,
 cls: "mbl_cta"
    %}
  </div>
</div>


{% schema %}
  {
    "name": "test-header",
    "tag": "header",
    "class": "test-header",
    "settings": [
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "text",
        "id": "logo_text",
        "label": "Logo Text",
        "default": "Tisso Vision"
      },
      {
        "type": "url",
        "id": "logo_url",
        "label": "Link"
      },
      {
        "type": "richtext",
        "id": "announcement",
        "label": "announecment",
        "default": "<p>Find the ideal gift for your loved ones.</p>"
      }, {
        "type": "text",
        "id": "btn_text",
        "label": "CTA Text",
        "default": "Choose Gift"
      }, {
        "type": "url",
        "id": "btn_url",
        "label": "CTA Url"
      }, {
        "type": "color",
        "id": "btn_clr",
        "label": "Button Color"
      }, {
        "type": "color",
        "id": "btn__hvr_clr",
        "label": "Button Hover Color"
      }
    ],
    "presets": [
      {
        "name": "Test Header"
      }
    ]
  }
{% endschema %}